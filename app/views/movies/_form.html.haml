= form_for @movie, html: { multipart: true } do |f|
  - if @movie.errors.any?
    #error_explanation
      %ul
        - @movie.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br
      = f.text_field :title
  .field
    = f.label :year
    %br
      = f.number_field :year
  .field
    = f.label :description
    %br
      = f.text_area :plot
  .actions
    = f.submit