%h1 New Movie
= form_for @review, url: { action: "create" }, html: { class: "nifty_form" } do |f|
  - if @review.errors.any?
    #error_explanation
      %ul
        - @review.errors.full_messages.each do |message|
          %li= message
  .field
    #star-rating
  .field
    = f.label :comment
    %br
      = f.text_area :comment
  %br
  %fieldset.form-group.action
    %input(type="submit" value="Create Review" class="btn btn-default")
= link_to "Back", movie_path(@movie)

:javascript
  $('#star-rating').raty({
    path: '/assets',
    scoreName: 'review[rating]'
  });