= form_for @user, url: { action: "create" }, html: { class: "nifty_form" } do |f|
  - if @user.errors.any?
    #error_explanation
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :email
    %br
      = f.email_field :email
  .field
    = f.label :password
    %br
      = f.text_field :password
  .field
    = f.label :full_name
    %br
      = f.text_field :full_name
  .actions
    = f.submit "Register"